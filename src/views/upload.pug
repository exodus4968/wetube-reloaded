extends base

block content
    div.upload
        div.upload__border
            video#preview.upload__video
            button#actionBtn.submit__btn.upload__btn Start Recording
    if errorMessage   
        span=errorMessage
    form(method="POST", enctype="multipart/form-data").submit-form
        label(for="video") Video File 
        input(type="file", accept="video/*,", required, id="video", name="video")
        label(for="thumb") Thumbnail File 
        input(type="file", accept="image/*,", required, id="thumb", name="thumb")
        input(placeholder="Title", required, type="text", name="title" maxlength=50 )
        input(placeholder="Description", required, type="text", name="description" minlength=1 )
        input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")

block script
    script(src="/static/js/recorder.js")